<div class="container-fluid">
  <div class="span10">
    <form class="well form-search">
      <fieldset>
        <label>기간지정</label>
        <input type="text" id="start_date" name="start_date" placeholder="YYYY-mm-dd" class="datepicker"/>
        ~
        <input type="text" id="end_date" name="end_date" placeholder="YYYY-mm-dd" class="datepicker"/>
        <input type="submit" value="조회" class="btn btn-primary" />
      </fieldset>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>분류</th>
          <th>소분류</th>
          <th>이름</th>
          <th>제목</th>
          <th>금액</th>
          <th>등록날짜</th>
          <th>사용날짜</th>
        </tr>
      </thead>
      <tbody>
        [% SET total_amount = 0 %]
        [% FOREACH list IN lists%]
        <tr>
          [% IF list.class == '1'%]
            <td>거래</td>
          [% ELSE %]
            <td>입금</td>
          [% END %]
          <td>[% list.memo %]</td>
          <td>[% list.user.user_name %]</td>
          <td>[% list.title %]</td>
          <td>[% list.amount | comma %]</td>
          <td>[% list.usage_date.ymd %]</td>
          <td>[% list.created_on.ymd %]</td>
          <td>[% list.update_on.ymd %]</td>
          [% total_amount = total_amount + list.amount %]
        </tr>
        [% END %]
        <tr>
          <td>
            총합
          </td>
          <td></td> <td></td>
          <td></td>
          <td>[% total_amount | comma %]원</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    [% PROCESS 'inc/pagination.tt' %]
  </div>
</div>
